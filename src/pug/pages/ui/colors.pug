			.color-item
				.color-box(style="background-color: #fff;")
				.color-name @white
			.color-item
				.color-box(style="background-color: #000;")
				.color-name @black
			.color-item
				.color-box(style="background-color: #6b96a5;")
				.color-name @footerText
			.color-item
				.color-box(style="background-color: #4d4d4d;")
				.color-name @benefitsText
		.section-ui
			.title-3.title-3--bb Цвета для заголовков
			.color-item
				.color-box(style="background-color: #84c604;")
				.color-name @pageTitle
			.color-item
				.color-box(style="background-color: #32505a;")
				.color-name @sectionTitle
		.section-ui
			.title-3.title-3--bb Текст в блоке ОТЗЫВЫ
			.color-item
				.color-box(style="background-color: #5e81a7;")

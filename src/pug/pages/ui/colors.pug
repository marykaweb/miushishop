			.color-item
				.color-box(style="background-color: #84c604;")
				.color-name @hoverMenu
			.color-item
				.color-box(style="background-color: #1a2d34;")
				.color-name @footerBg

		.section-ui
			.title-3.title-3--bb Фоны для кнопок
			.color-item
				.color-box(style="background-color:#fd4f10;")
				.color-name @btnOrder
			.color-item
				.color-box(style="background-color: #5e81a7;")

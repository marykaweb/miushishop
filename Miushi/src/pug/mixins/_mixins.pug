// Преимущества

// модальное меню
mixin modalWindow(title)
	#exampleModalLong.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLongTitle', aria-hidden='true').text-center
		.modal-dialog(role='document')
			.modal-content
				.modal-header
					h5#exampleModalLongTitle.modal-title #{title}
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') ×
				.modal-body
					block
				.modal-footer
					button.btn.btn-primary.modal-btn(type='button') Отправить